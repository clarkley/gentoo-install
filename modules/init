. profiles/default.conf

if [[ "$1" != "" && -e profiles/$1 ]]; then
    . profiles/$1
elif [[ "$1" != "" ]]; then
    echo "Profile '$1' does not exists."
    exit -1
fi

##
# usage: config_set [file] [variable] [value]
##
config_set() {
    sed -i "/$2\s*=\s*\.*/d" $1
    if [[ -n $4 ]]; then
        echo "$2=$3" >> $1
    else
        echo "$2=\"$3\"" >> $1
    fi
}